<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".imgproc.hist.HistActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnLoadImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加载图片" />

            <Button
                android:id="@+id/btnHistEqu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="直方图均衡" />

            <Button
                android:id="@+id/btnHistCal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="直方图计算" />

            <Button
                android:id="@+id/btnHistComp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="直方图匹配" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnBackProjection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="反向投影" />

            <Button
                android:id="@+id/btnTempMatch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="模板匹配" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgSrc"
                android:layout_width="0px"
                android:layout_height="300dp"
                android:layout_weight="1"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/imgSrc1"
                android:layout_width="0px"
                android:layout_height="300dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_img_add"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imgSrc2"
                android:layout_width="0px"
                android:layout_height="300dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_img_add"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgDst"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/txvMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>
</ScrollView>